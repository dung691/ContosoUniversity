@page
@model ContosoUniversity.Pages.Courses.Edit

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Course</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Data.Id" />
            <div class="form-floating mb-3">
                <label asp-for="Data.Id" class="form-label"></label>
                <div asp-display-for="Data.Id"></div>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Data.Title" class="form-label"></label>
                <input asp-for="Data.Title" class="form-control" />
                <span asp-validation-for="Data.Title" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Data.Credits" class="form-label"></label>
                <input asp-for="Data.Credits" class="form-control" />
                <span asp-validation-for="Data.Credits" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <label asp-for="Data.DepartmentId" class="form-label"></label>
                <select asp-for="Data.DepartmentId" class="form-select"></select>
                <span asp-validation-for="Data.DepartmentId" class="text-danger"></span>
            </div>
            <div class="form-floating mb-3">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
